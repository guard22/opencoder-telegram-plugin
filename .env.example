# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=

# Comma-separated list of allowed Telegram user IDs
TELEGRAM_ALLOWED_USER_IDS=

# Optional: private chat ID for legacy notifications
TELEGRAM_CHAT_ID=

# Optional: forum supergroup chat ID where /oc commands and topics are handled
TELEGRAM_FORUM_CHAT_ID=

# Optional: comma-separated allowed chat IDs. If set, all other chats are ignored.
TELEGRAM_ALLOWED_CHAT_IDS=

# Comma-separated absolute workspace roots allowed for /oc new
TELEGRAM_ALLOWED_WORKSPACE_ROOTS=/home/opencode/Projects/EdgeRolls,/home/opencode/Projects/BoosterVpn,/home/opencode/Projects/TGtoMax

# Default model for bridged sessions: provider/model
TELEGRAM_OPENCODE_MODEL=openai/gpt-5.3-codex
# OpenCode server URL (or use OPENCODE_BASE_URL / OPENCODE_SERVER_URL)
TELEGRAM_OPENCODE_BASE_URL=http://127.0.0.1:4097
# Optional basic auth (set both or leave both empty)
TELEGRAM_OPENCODE_USERNAME=
TELEGRAM_OPENCODE_PASSWORD=

# Max downloaded attachment size from Telegram (bytes)
TELEGRAM_MAX_ATTACHMENT_BYTES=6291456

# Persistent bridge state file
TELEGRAM_BRIDGE_STATE_PATH=/home/opencode/.config/opencode/local-plugins/opencoder-telegram-plugin/state/topic-session-map.json
